<div>
    @if (ViewBag.lista != null)
    {
        <table border="1">
            <tr>
                <th>Legajo</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>DNI</th>
                <th>Telefono</th>
            </tr>


            @foreach (var item in ViewBag.lista)
            {
                <tr>



                    <td>@item.Legajo</td>
                    <td>@item.Nombre</td>
                    <td>@item.Apellido</td>
                    <td>@item.DNI</td>
                    <td>@item.Telefono</td>

                </tr>
            }
        </table>
    }
    else
    {
        @ViewBag.error
    }
</div>
@*<link rel="stylesheet" href="~/Content/jquery.dataTables.min.css" />*@
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.dataTables.min.js"></script>
@model IEnumerable<EmpleadoConsulta.Models.EmpleadoModel>

<div class="row">


    @*BUSCAR*@
    <div class="col-md-8">

        <form action=@Url.Action("Buscar","Home") method="post">
            <label class="h3">Buscar por nombre,apellido o dni</label>
            <input type="text" name="name" value="" class="input" />
            <input type="submit" name="button" value="Buscar" class="btn btn-primary" />
        </form>

    </div>


    @*MOSTRAR TODO*@
    <div class="col-md-1 ">
        <br />
        <form action=@Url.Action("MostrarTodo","Home") method="post">
            <input type="submit" name="button" value="Mostrar todo" class="btn btn-success" />
        </form>

    </div>
    <div class="col-md-1 "></div>
    <div class="col-md-1 ">
        <br />
        <input type="submit" name="NewPerson" value="Agregar nueva persona" class="btn btn-success" />
        

    </div>
    </div>

    <div>
        @if (Model != null)
        {

            <table border="1" id="Table1" class="stripe hover row-border order-column  dt-body-center dt-head-center ">
                <thead>
                    <tr>

                        <th class="no-sort">Legajo</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>DNI</th>
                        <th class="no-sort">Telefono</th>
                        <th class="no-sort">Modificar</th>
                        <th class="no-sort">Eliminar</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>

                            <td>@item.Legajo</td>
                            <td>@item.Nombre</td>
                            <td>@item.Apellido</td>
                            <td>@item.DNI</td>
                            <td>@item.Telefono</td>
                            
                            <td>
                                <form action=@Url.Action("Edit","Home") method="post">
                                    <input type="hidden" name="ID" value="@item.EmpleadoId" />
                                    
                                    <button type="submit" class="center-block" >
                                        <span class="glyphicon glyphicon-pencil"></span>   
                                    </button>
                                </form>
                            </td>

                            <td>
                                <input type="hidden" name="ID" value="@item.EmpleadoId" />
                                <a href="" class="center-block ">
                                    <span class="glyphicon glyphicon-trash"></span>
                                </a>


                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        }
        else
        {
            @ViewBag.error
        }
    </div>

